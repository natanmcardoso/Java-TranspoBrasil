package br.com.cursojava.aula002;

import java.util.Scanner;

public class Exercicio06 {
	public static void main(String [] args){
		System.out.println("Calculo da idade em dias. \n");
		
		Scanner idade = new Scanner(System.in);
		System.out.printf("Informe sua idade em dias: \n");
		int idade2 = Integer.parseInt(idade.nextLine());
		
		int ano = 360;
		int mes = 30;
		int dia = 1;
		
		int IdadeEmAnos = ( idade2 / 360 );
		int IdadeEmMes = ( idade2  / %  30 );
		int IdadeEmDia = ( idade2 / 1 );
		
		
		System.out.printf("Sua idade em anos %f: \n", IdadeEmAnos);
		System.out.printf("Sua idade em meses %f: \n", IdadeEmMes);		
		System.out.printf("Sua idade em dias %f: \n", IdadeEmDia);
		
		
	}
}
