import java.util.Scanner;

public class Exercicio02 {
	public static void main(String [] args) {
	
	System.out.println("Calculo de um Retângulo.\n" );
	
	Scanner base = new Scanner(System.in);
	System.out.printf("Informe a base: \n");
	double base1 = Double.parseDouble(base.nextLine());
	System.out.printf("Informe a altura: \n");
	double altura= Double.parseDouble(base.nextLine());
	
	double area = base1 * altura;
	double perimetro = (base1 * 2) + (altura * 2);
	
	
	

	}
}
